<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="tv_background_color" format="color"/>
        <attr name="tv_border_radius" format="integer"/>
        <attr name="tv_stroke_color" format="color"/>
        <attr name="tv_stroke_width" format="integer"/>
        <attr name="tv_ripple_color" format="color"/>
        <attr name="tv_disable_color" format="color"/>

        <attr name="tv_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="CustomLinearLayout">
        <attr name="ll_background_color" format="color"/>
        <attr name="ll_border_radius" format="integer"/>
        <attr name="ll_stroke_color" format="color"/>
        <attr name="ll_stroke_width" format="integer"/>
        <attr name="ll_ripple_color" format="color"/>
        <attr name="ll_disable_color" format="color"/>

        <attr name="ll_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>



    <declare-styleable name="CustomConstraintLayout">
        <attr name="cl_background_color" format="color"/>
        <attr name="cl_border_radius" format="integer"/>
        <attr name="cl_stroke_color" format="color"/>
        <attr name="cl_stroke_width" format="integer"/>
        <attr name="cl_ripple_color" format="color"/>
        <attr name="cl_disable_color" format="color"/>

        <attr name="cl_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomTextInputLayout">
        <attr name="input_layout_validation_type">
            <flag name="phone" value="1"/>
            <flag name="email" value="2"/>
            <flag name="password" value="3"/>
            <flag name="empty_check" value="4"/>
        </attr>
        <attr name="input_layout_validation_enable" format="boolean"/>
        <attr name="input_layout_error_message" format="string"/>
        <attr name="input_layout_error_text_color" format="color"/>
        <attr name="input_layout_error_text_size" format="dimension"/>
        <attr name="input_layout_error_icon" format="reference"/>
    </declare-styleable>

</resources>