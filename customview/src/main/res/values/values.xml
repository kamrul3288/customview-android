<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextViewRegular">
        <attr name="tv_background_color" format="color"/>
        <attr name="tv_border_radius" format="dimension"/>
        <attr name="tv_stroke_color" format="color"/>
        <attr name="tv_stroke_width" format="dimension"/>
        <attr name="tv_ripple_color" format="color"/>
        <attr name="tv_disable_color" format="color"/>

        <attr name="tv_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ButtonRegular">
        <attr name="btn_background_color" format="color"/>
        <attr name="btn_border_radius" format="dimension"/>
        <attr name="btn_stroke_color" format="color"/>
        <attr name="btn_stroke_width" format="dimension"/>
        <attr name="btn_ripple_color" format="color"/>
        <attr name="btn_disable_color" format="color"/>

        <attr name="btn_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="LinearLayout">
        <attr name="ll_background_color" format="color"/>
        <attr name="ll_border_radius" format="dimension"/>
        <attr name="ll_stroke_color" format="color"/>
        <attr name="ll_stroke_width" format="dimension"/>
        <attr name="ll_ripple_color" format="color"/>
        <attr name="ll_disable_color" format="color"/>

        <attr name="ll_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>



    <declare-styleable name="ConstraintLayout">
        <attr name="cl_background_color" format="color"/>
        <attr name="cl_border_radius" format="dimension"/>
        <attr name="cl_stroke_color" format="color"/>
        <attr name="cl_stroke_width" format="dimension"/>
        <attr name="cl_ripple_color" format="color"/>
        <attr name="cl_disable_color" format="color"/>

        <attr name="cl_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="View">
        <attr name="view_background_color" format="color"/>
        <attr name="view_border_radius" format="dimension"/>
        <attr name="view_stroke_color" format="color"/>
        <attr name="view_stroke_width" format="dimension"/>
        <attr name="view_ripple_color" format="color"/>
        <attr name="view_disable_color" format="color"/>

        <attr name="view_background_shape">
            <flag name="stroke" value="1"/>
            <flag name="rectangle" value="2"/>
            <flag name="oval" value="3"/>
            <flag name="stroke_circle" value="4"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="TextInputLayout">
        <attr name="input_layout_validation_type" format="enum">
            <enum name="phone" value="0"/>
            <enum name="email" value="1"/>
            <enum name="password" value="2"/>
            <enum name="empty_check" value="3"/>
        </attr>


        <attr name="input_layout_phone_number_country_code" format="enum">
            <enum name="BD" value="0"/>
        </attr>

        <attr name="input_layout_password_min_length" format="enum">
            <enum name="five" value="0"/>
            <enum name="six" value="1"/>
            <enum name="eight" value="2"/>
        </attr>

        <attr name="input_layout_validation_enable" format="boolean"/>
        <attr name="input_layout_error_message" format="string"/>
        <attr name="input_layout_error_text_color" format="color"/>
        <attr name="input_layout_error_text_size" format="dimension"/>
        <attr name="input_layout_error_icon" format="reference"/>
    </declare-styleable>

</resources>