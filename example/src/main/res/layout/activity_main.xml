<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.iamkamrul.textview.CustomTextViewBold
        android:id="@+id/myTv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cv_background_color="@color/black"
        app:cv_background_shape="stroke"
        app:cv_stroke_color="@color/teal_200"
        app:cv_stroke_width="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.iamkamrul.textview.CustomTextView
        android:id="@+id/customTextView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="18sp"
        app:cv_background_shape="stroke_circle"
        app:cv_stroke_color="@color/black"
        app:cv_stroke_width="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTv" />

    <com.iamkamrul.textview.CustomTextViewItalic
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="18sp"
        app:cv_background_shape="oval"
        app:cv_background_color="@color/black"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>