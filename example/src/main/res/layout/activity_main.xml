<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.iamkamrul.input.TextInputLayout
        android:id="@+id/exampleIL"
        app:input_layout_error_icon="@drawable/ic_launcher_background"
        app:input_layout_validation_enable="true"
        app:input_layout_validation_type="password"
        app:input_layout_error_message="Hello"
        app:input_layout_password_min_length="six"
        app:input_layout_phone_number_country_code="BD"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.iamkamrul.input.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.iamkamrul.input.TextInputLayout>

    <com.iamkamrul.button.ButtonRegular
        android:id="@+id/validateBtn"
        android:text="Validate"

        android:layout_margin="16dp"
        app:btn_background_color="@color/purple_200"
        app:btn_border_radius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.iamkamrul.textview.TextViewRegular
        android:layout_marginTop="16dp"
        app:tv_stroke_width="1dp"
        app:tv_stroke_color="@color/black"
        app:tv_background_shape="stroke_circle"
        android:text="Hello"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <com.iamkamrul.view.View
        app:view_background_color="@color/black"
        app:view_background_shape="oval"
        android:layout_margin="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <RadioGroup
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.iamkamrul.radio.RadioButtonRegular
            android:text="Hello"
            android:button="@android:color/transparent"            app:rb_border_radius="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            app:rb_selected_text_color="@color/white"
            app:rb_background_shape="oval"
            app:rb_selected_bg_color="@color/purple_700"
            app:rb_bg_color="@color/purple_200"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.iamkamrul.radio.RadioButtonRegular
            android:button="@android:color/transparent"
            android:gravity="center"
            app:rb_selected_text_color="@color/white"
            app:rb_background_shape="oval"
            app:rb_selected_bg_color="@color/purple_700"
            app:rb_bg_color="@color/purple_200"
            android:text="Hello"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </RadioGroup>

    <com.iamkamrul.layout.LinearLayout
        android:id="@+id/exampleLL"
        app:ll_background_color="@color/purple_200"
        app:ll_background_shape="rectangle"
        app:ll_border_radius="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

</LinearLayout>