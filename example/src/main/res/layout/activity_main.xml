<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.iamkamrul.input.CustomTextInputLayout
        app:input_layout_validation_enable="true"
        app:input_layout_validation_type="phone"
        app:input_layout_error_message="Hello Errror"
        app:input_layout_error_icon="@drawable/ic_launcher_background"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <com.iamkamrul.input.CustomTextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.iamkamrul.input.CustomTextInputLayout>

    <com.iamkamrul.textview.CustomTextView
        android:layout_marginTop="16dp"
        app:tv_stroke_width="1dp"
        app:tv_stroke_color="@color/black"
        android:text="Hello"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="80dp"/>


</LinearLayout>